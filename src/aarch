# comment

.global _start
.section .text

_start:
    mov x15, #8

loop:
    cmp x15, #0
    beq exit

    bl hello_world

    sub x15, x15, #1
    b loop


hello_world:
    mov x7, #0x4
    mov x0, #1
    ldr x1, =message
    mov x2, #13
    svc 0
    ret


exit:
    mov x7, #0x1
    mov x0, #65
    svc 0

.section .data
    message:
    .ascii "hello world\n"